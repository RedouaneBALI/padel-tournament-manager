{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20"
  },
  "scripts": {
    "test": "jest",
    "dev": "next dev",
    "build": "next build",
    "clean:functions": "rm -rf .firebase/functions && mkdir -p .firebase/functions",
    "copy:functions": "cp -r .next public .firebase/functions && cp functions.package.json .firebase/functions/package.json",
    "copy:index": "if [ -f functions/index.js ]; then cp functions/index.js .firebase/functions/index.js; elif [ -f index.js ]; then cp index.js .firebase/functions/index.js; else echo '‚ùå Missing index.js (functions entrypoint)'; exit 1; fi",
    "install:functions": "npm --prefix .firebase/functions install --omit=dev",
    "strip:nexttypes": "rm -rf .firebase/functions/.next/types",
    "build:functions": "rm -rf .next/types .firebase/functions/.next/types && NEXT_TELEMETRY_DISABLED=1 NEXT_DISABLE_ESLINT=1 NEXT_DISABLE_TYPECHECK=1 next build && npm run clean:functions && npm run copy:functions && rm -rf .firebase/functions/.next/types && npm run copy:index && npm run install:functions",
    "deploy:functions": "npm run build:functions && firebase deploy --only functions"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "firebase": "^12.1.0",
    "firebase-functions": "^6.4.0",
    "html-to-image": "^1.11.13",
    "lucide-react": "^0.525.0",
    "next": "^15.4.6",
    "next-auth": "^4.24.11",
    "react": "^18.3.1",
    "react-clock": "^6.0.0",
    "react-confirm-alert": "^3.0.6",
    "react-datepicker": "^8.4.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-time-picker": "^8.0.2",
    "react-toastify": "^11.0.5",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/jest": "^30.0.0",
    "@types/node": "^18",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.4.6",
    "jest": "^30.0.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.1",
    "typescript": "^5"
  },
  "overrides": {
    "eslint": "^8.57.1"
  }
}
